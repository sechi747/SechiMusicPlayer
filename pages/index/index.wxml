<view class="indexContainer">
  <!-- 轮播图区域 -->
  <swiper class="banner" indicator-dots="true" indicator-color="white" indicator-active-color="grey" circular="true" autoplay="true">
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>
  <!-- 图标导航栏区域 -->
  <view class="navContainer">
    <view class="navItem" bindtap="toRecommend">
      <text class="iconfont icon-tuijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-paihangbang"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhibo"></text>
      <text>直播</text>
    </view>
  </view>
  <!-- 推荐歌单区域 -->
  <view class="recommendContainer">
    <!-- 头部标题区域 -->
    <navHeader title="推荐歌单" nav="为你精心推荐"></navHeader>
    <!-- 内容区域 -->
    <scroll-view class="recommend" enable-flex="true" scroll-x="true">
      <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>
  </view>
  <!-- 排行榜区域 -->
  <view class="topListContainer">
    <!-- 头部标题区域 -->
    <navHeader title="排行榜" nav="热播风向标"></navHeader>
    <!-- 内容区域 -->
    <swiper class="topListSwiper" next-margin="50rpx">
      <swiper-item wx:for="{{topList}}" wx:key="name">
        <view class="songList">
          <view class="title">{{item.name}}</view>
          <view class="song" wx:for="{{item.tracks}}" wx:key="id">
            <image src="{{item.al.picUrl}}"></image>
            <text class="count">{{index + 1}}</text>
            <text class="musicTitle">{{item.name}}</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>

</view>