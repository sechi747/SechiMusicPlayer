.container {
  width: 100%;
  height: 100%;
}
.wrapper{
  position:relative;
  z-index: 90;
  padding-bottom: 40rpx;
}
.left-top-sign{
  font-size: 120rpx;
  color: #f0f0f0;
  position:relative;
  left: -2rpx;
}
.welcome{
  position:relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #5f5f5f;
}
.input-content{
  padding: 0 60rpx;
}
.input-item{
  display:flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background:#f8f6fc;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;
}

.input-item:last-child{
  margin-bottom: 0;
}
.input-item .tit{
  height: 50rpx;
  line-height: 58rpx;
  font-size: 34rpx;
  color: #606266;
}
.input-item input{
  height: 60rpx;
  font-size: 28rpx;
  color: #c89dac;
  width: 100%;
}
.confirm-btn{
  width: 630rpx!important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #ff4757;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}
.confirm-btn2:after{
  border-radius: 100px;
}
.forget-section{
  font-size: 28rpx;
  color: #70a1ff;
  text-align: center;
  margin-top: 40rpx;
}
.register-section{
  position:absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
}
.register-section text{
  color: #70a1ff;
  margin-left: 10rpx;
}
